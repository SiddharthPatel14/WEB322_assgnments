  <!-- hero section --><!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collection</title>
    <link rel="stylesheet" href="/css/main.css" />
    <style>
        /* Updated styles */
        .hero {
            background-color: #f3f4f6; /* Light gray background */
            color: #333; /* Dark text color */
        }

        .btn {
            background-color: #4CAF50; /* Green */
            color: white;
            padding: 4px 8px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            border-radius: 4px;
            margin-right: 6px;
            margin-bottom: 6px;
        }

        .btn-primary {
            background-color: #007bff; /* Blue */
        }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .table th,
        .table td {
            padding: 8px;
            border-bottom: 1px solid #ccc;
        }

        .table-zebra tbody tr:nth-child(even) {
            background-color: #f3f4f6; /* Light gray background for even rows */
        }

        .table-zebra tbody tr:hover {
            background-color: #e0e0e0; /* Darker gray background on hover */
        }

        .avatar {
            width: 32px;
            height: 32px;
            overflow: hidden;
            border-radius: 50%;
            margin-right: 10px;
        }

        .avatar .rounded-lg {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>
</head>
<body>
  <!-- navbar -->
  <%- include('partials/navbar', {page: "/lego/sets"}) %> 
  
  <!-- hero section -->
  <div class="container mx-auto p-4">
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center ">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Collection</h1>
          <p class="py-6">Look over the complete set. To filter by theme, select one of the following:
            <a href="/lego/sets?theme=Technic" class="btn btn-primary btn-xs">Technic</a>
            <a href="/lego/sets?theme=Competition" class="btn btn-primary btn-xs">Competition</a>
            <a href="/lego/sets?theme=RoboRiders" class="btn btn-primary btn-xs">RoboRiders</a>
          </p>
        </div>
      </div>
    </div>

    <br />

    <!-- render the table -->
    <div class="overflow-x-auto overflow-y-hidden">
        <table class="table table-zebra">
            <tbody>
                <% sets.forEach(set => { %>
                <tr>
                  <td>
                    <div class="avatar">
                      <div class="w-32 h-32 rounded-lg bg-transparent bg-no-repeat bg-cover" style="background-image: url('<%= set.img_url %>');"></div>
                    </div>
                  </td>
                  <td>
                    <%= set.name %> | <a href="/lego/sets?theme=<%= set.theme %>" class="btn mt-2 btn-xs"><%= set.theme %></a>
                  </td>
                  <td>
                    <span class="font-bold">Year: </span> <%= set.year %> - <span class="font-bold">Parts:</span> <%= set.num_parts %>
                  </td>
                  <td>
                    <a href="/lego/sets/<%= set.set_num %>" class="btn btn-xs">Details</a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
        </table>
    </div>
</body>
